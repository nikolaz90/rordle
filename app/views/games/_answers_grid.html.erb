<div class="flex flex-col space-y-1">
    <% 7.times do %>
        <div class="flex justify-center gap-1">
            <% line = answers[_1] || ' '*rails_method.size%>
            <% line.size.times do |i|%>
                <div class="flex justify-center items-center shrink-0 w-10 h-10 border-2 border-red-400 rounded">
                    <span class="font-semibold"><%=line[i] %></span>
                </div>
            <% end %>
        </div>
    <% end %>
</div>
