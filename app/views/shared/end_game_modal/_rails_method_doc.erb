<div class="mb-8">
    <p class="mb-8">The word was:</p>
    <div class="flex justify-center	flex-wrap">
        <% rails_method.chars.each do |letter| %>
            <div class="text-white flex justify-center items-center font-semibold m-2 text-sm bg-red-400 rounded gap-4 h-8 w-8  border-b-[2px] border-red-700 hover:border-b-[0px] sm:text-xl sm:h-10 sm:w-10"><%= letter %></div>
        <% end %>
    </div>
</div>
<div class="end_game_modal hidden sm:block">
    <pre><%= rails_method_doc %></pre>
</div>